{
  "name": "n8n-nodes-joomreem-content",
  "version": "0.1.1",
  "description": "n8n community node by JoomReem for Joomla CMS content management - articles, categories, tags, and media",
  "keywords": [
    "n8n-community-node-package",
    "joomla",
    "joomreem",
    "cms",
    "content-management",
    "articles",
    "categories",
    "tags",
    "media"
  ],
  "license": "MIT",
  "homepage": "https://joomreem.com",
  "author": {
    "name": "Mohamed Abdelaziz",
    "email": "admin@joomreem.com",
    "url": "https://joomreem.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mabdelaziz77/n8n-nodes-joomreem-content.git"
  },
  "engines": {
    "node": ">=18.10"
  },
  "main": "dist/nodes/Joomla/Joomla.node.js",
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint 'nodes/**/*.ts' 'credentials/**/*.ts'",
    "lintfix": "eslint 'nodes/**/*.ts' 'credentials/**/*.ts' --fix",
    "prepublishOnly": "npm run build && npm run lint"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/JoomlaApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Joomla/Joomla.node.js"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^8.56.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "gulp": "^4.0.2",
    "n8n-workflow": "*",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}
